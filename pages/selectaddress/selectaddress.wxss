page {
  background: #fff;
}

.heard {
  background: #fff;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  /* margin-bottom: 20rpx; */
  border-bottom: 20rpx solid #eee;
}

.heard .top {
  margin-bottom: 20rpx;
}

.heard .left {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  flex-direction: column;
  font-size: 28rpx;
}

.heard .left .phone {
  font-size: 26rpx;
  margin-left: 30rpx;
  line-height: 28rpx;
}

.heard .left .address {
  font-size: 26rpx;
  color: rgb(151, 151, 151);
  /* margin-left: 32rpx; */
  width: 270rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.heard .left .bottom {
  display: flex;
  justify-content: space-between;
}

.heard .right {
  font-size: 24rpx;
  color: rgb(166, 166, 166);
}

.nav {
  font-size: 20rpx;
  background: rgba(239, 118, 7, 0.2);
  color: rgb(239, 118, 7);
  border-radius: 5rpx;
  padding: 5rpx;
  margin-right: 32rpx;
}

.center {
  padding: 40rpx;
  background: #fff;
}

.center .heard {
  margin: 0;
  padding: 0;
  margin-bottom: 36rpx;
  border: none;
}

.center .heard .right {
  height: 35rpx;
  margin-top: 30rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #b5b5b5;
}

#button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

#button button {
  background: #cd1531;
  color: #fff;
}

.check {
  padding-left: 15rpx;
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  height: 30rpx;
  width: 30rpx;
  margin-top: -4rpx;
  /* 自定义样式.... */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #cd1531;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.addr_list {
  width: 100%;
  height: 210rpx;
  font-size: 30rpx;
}

.list_top {
  height: 60%;
  border-bottom: solid 1px rgb(242, 242, 242);
  padding-top: 30rpx;
}

.checkbox {
  width: 100%;
  height: 100%;
}