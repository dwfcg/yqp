/**index.wxss**/

page {
  background: #fff;
}

.top_img {
  width: 100%;
  height: 500rpx;
}

image {
  width: 100%;
  height: 100%;
}

image {
  width: 100%;
}

.conten {
  background: #fff;
  /* width: 710rpx; *//* margin: 0 auto; */
  padding: 0 40rpx;
}

.conten .top {
  width: 420rpx;
  display: flex;
  justify-content: space-around;
  align-content: center;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc;
}

.conten .top .active {
  border-bottom: 5rpx solid #feed03;
}

.conten .top view {
  padding: 40rpx 0 15rpx;
}

.conten .tu {
  width: 300rpx;
  height: 300rpx;
  background: #fff;
  /* border: 1rpx solid #000; */
    box-shadow: #b5b5b5 0px 0px 15px 2rpx ;
}

.tu image {
  width: 100%;
  height: 100%;
}

.conten .bottom {
  display: flex;
  justify-content: space-between;
  align-content: center;
  flex-wrap: wrap;
  padding: 20rpx 0;
  /* margin-bottom: 20rpx; */
}

.conten .bottom .details {
  margin-bottom: 40rpx;
}

.details .text {
  color: #000;
  font-size: 22rpx;
  /* margin-top: 12rpx; */
}

.details .money {
  margin: 20rpx 0;
  font-size: 22rpx;
  color: #ff2535;
}

.active2 {
  display: none;
}

.heng {
  width: 40rpx;
  height: 2rpx;
  background: #000;
  margin: 20rpx 20rpx;
}

.top_text {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  padding: 60rpx 0;
  font-size: 28rpx;
}

#box {
  display: flex;
  justify-content: space-around;
  align-content: center;
  border-bottom: 4rpx solid #b5b5b5;
}

#box .bottom {
  font-size: 24rpx;
  color: rgba(41, 38, 35, 0.4);
  padding: 40rpx 0 15rpx;
}
