/* pages/details/details.wxss */

.box {
  padding:0 0 0 20rpx;
  background: #fff;
}

.heard {
  padding: 40rpx 0 0 0;
  background: #fff;
  margin-bottom: 20rpx;
  /* border-bottom: 1rpx solid #b5b5b5; */
}

.heard .tu {
  width: 750rpx;
  height: 750rpx;
  background: #ccc;
  margin: 0 auto 20rpx;
}

.heard .money {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  padding: 0 95rpx;
}
.heard .mone2{
  color: #ccc;
}
.name, .Keyword, .mode {
  padding: 0 95rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.demand {
  background: #fff;
  font-size: 26rpx;
  padding: 40rpx 60rpx 0;

}

.demand view {
  padding: 0 35rpx;
  margin-bottom: 30rpx;
}
.demand view:last-child{
  margin: 0;
}
.demand .top{
  margin-top: 30rpx;
}
.demand .range{
  margin: 0;
  padding-bottom: 30rpx;
  border-bottom: 1rpx dashed #b5b5b5;
}
.box1{
  padding: 0 60rpx;
  background: #fff;
}
.box1 .shot {
  background: #fff;
  padding: 35rpx;
  border-bottom: 1rpx dashed #b5b5b5;
}
.box1:last-child .shot{
  border-bottom: none;
}
.demand .bottom view{
  width: 280rpx;
  padding: 0;
}
.demand .bottom{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  border-bottom: 1rpx dashed #b5b5b5;

}
.shot .top {
  font-size: 30rpx;
  font-weight: bold;
}

.shot .text {
  width: 560rpx;
  height: 360rpx;
  background: #ccc;
  margin: 40rpx auto;
}

.shot .tu {
  width: 560rpx;
  height: 460rpx;
  margin: 40rpx auto;
  background: #ccc;
}
#bottom{
  width: 100%;
  background: #fff;
  padding: 10rpx 0;
  box-sizing: border-box;
  margin-top: 20rpx;
}
#button{
  width: 710rpx;
  height: 60rpx;
  background: #feed03;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 5rpx;
}
image{
  width: 100%;
  height: 100%;
}